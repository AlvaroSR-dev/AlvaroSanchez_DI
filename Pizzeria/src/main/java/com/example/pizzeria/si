
                switch (seleccionarPizza.getText()){
                    case "Barbacoa":
                        ArrayList<Ingrediente> ingredientesPizza = new ArrayList<Ingrediente>(new Ingrediente("Bacon"));
                        ingredientesPizza.add(new Ingrediente("Bacon"));
                        ingredientesPizza.add(new Ingrediente("Salsa barbacoa"));
                        ingredientesPizza.add(new Ingrediente("Maíz"));
                        ingredientesPizza.add(new Ingrediente("Cebolla"));
                        ingredientesPizza.add(new Ingrediente("Carne"));
                        break;
                    case "Hawaiana":
                        ingredientesPizza.add(new Ingrediente("Piña"));
                        ingredientesPizza.add(new Ingrediente("Jamón"));
                        ingredientesPizza.add(new Ingrediente("Salsa"));
                        break;
                    case "Jamón y queso":
                        ingredientesPizza.add(new Ingrediente("Jamón"));
                        ingredientesPizza.add(new Ingrediente("Queso"));
                        break;
                    case "Cuatro quesos":
                        ingredientesPizza.add(new Ingrediente("Queso gorgonzola"));
                        ingredientesPizza.add(new Ingrediente("Queso parmesano"));
                        ingredientesPizza.add(new Ingrediente("Queso roquefort"));
                        ingredientesPizza.add(new Ingrediente("Queso gouda"));
                        break;
                }
                System.out.println("Ingredientes: " + ingredientesPizza.size());

                if (sizePeque.isSelected()){
                    sizeSeleccion = sizePeque.getText();
                    switch (seleccionarPizza.getText()){
                        case "Barbacoa":
                            precioPizza = 7;
                            break;
                        case "Hawaiana":
                            precioPizza = 5;
                            break;
                        case "Jamón y queso":
                            precioPizza = 4;
                            break;
                        case "Cuatro quesos":
                            precioPizza = 8;
                            break;
                    }
                }else if (sizeMediana.isSelected()){
                    sizeSeleccion = sizeMediana.getText();
                    switch (seleccionarPizza.getText()){
                        case "Barbacoa":
                            precioPizza = 12;
                            break;
                        case "Hawaiana":
                            precioPizza = 10;
                            break;
                        case "Jamón y queso":
                            precioPizza = 8;
                            break;
                        case "Cuatro quesos":
                            precioPizza = 13;
                            break;
                    }
                }else if (sizeFamiliar.isSelected()){
                    sizeSeleccion = sizeFamiliar.getText();
                    switch (seleccionarPizza.getText()){
                        case "Barbacoa":
                            precioPizza = 15;
                            break;
                        case "Hawaiana":
                            precioPizza = 13;
                            break;
                        case "Jamón y queso":
                            precioPizza = 10;
                            break;
                        case "Cuatro quesos":
                            precioPizza = 17;
                            break;
                    }
                }