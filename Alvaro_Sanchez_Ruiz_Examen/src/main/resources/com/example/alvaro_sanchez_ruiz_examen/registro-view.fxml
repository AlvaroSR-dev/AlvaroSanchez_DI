<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.alvaro_sanchez_ruiz_examen.RegistroController">
   <children>
      <GridPane prefHeight="400.0" prefWidth="601.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="345.0" minWidth="10.0" prefWidth="301.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="303.0" minWidth="10.0" prefWidth="300.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="textFieldNombreRegistro" maxWidth="500.0" prefHeight="25.0" prefWidth="499.0" promptText="Nombre" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
            <TextField fx:id="textFieldPassRegistro" maxWidth="500.0" prefHeight="25.0" prefWidth="499.0" promptText="Contraseña" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <TextField fx:id="textFieldEmailRegistro" maxWidth="500.0" prefHeight="25.0" prefWidth="499.0" promptText="Email" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
            <TextField fx:id="textFieldTlfRegistro" maxWidth="500.0" prefHeight="25.0" prefWidth="499.0" promptText="Teléfono" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
            <ComboBox fx:id="comboBoxRegistro" prefHeight="25.0" prefWidth="500.0" promptText="Seleccionar" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
            <Button fx:id="buttonRegistrar" mnemonicParsing="false" text="Registrar" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
            <Button fx:id="buttonCerrar" mnemonicParsing="false" text="Cerrar" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
